<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dialersimple.fm.simpledialer.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/buttonClear"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvDialNum"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"

        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/buttonClear"
        app:layout_constraintRight_toLeftOf="@+id/buttonDel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDel"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="?android:attr/actionModeCloseDrawable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button02"
        app:layout_constraintHorizontal_chainStyle="spread"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button02"
        app:layout_constraintTop_toTopOf="@+id/button02" />

    <Button
        android:id="@+id/button02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:layout_marginTop="0dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button05"
        app:layout_constraintLeft_toRightOf="@+id/button01"
        app:layout_constraintRight_toLeftOf="@+id/button03"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

    <Button
        android:id="@+id/button03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button02"
        app:layout_constraintLeft_toRightOf="@+id/button02"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button02" />


    <Button
        android:id="@+id/button04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button05"
        app:layout_constraintTop_toTopOf="@+id/button05" />


    <Button
        android:id="@+id/button05"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button08"
        app:layout_constraintLeft_toRightOf="@+id/button04"
        app:layout_constraintRight_toLeftOf="@+id/button06"
        app:layout_constraintTop_toBottomOf="@+id/button02" />

    <Button
        android:id="@+id/button06"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button05"
        app:layout_constraintLeft_toRightOf="@+id/button05"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="@+id/button05" />


    <Button
        android:id="@+id/button07"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button08"

        app:layout_constraintTop_toTopOf="@+id/button08" />

    <Button
        android:id="@+id/button08"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button00"
        app:layout_constraintLeft_toRightOf="@+id/button07"
        app:layout_constraintRight_toLeftOf="@+id/button09"
        app:layout_constraintTop_toBottomOf="@+id/button05" />


    <Button
        android:id="@+id/button09"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button08"
        app:layout_constraintLeft_toRightOf="@+id/button08"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button08" />


    <Button
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:text="*"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button00"

        app:layout_constraintTop_toTopOf="@+id/button00" />

    <Button
        android:id="@+id/button00"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonHangUp"
        app:layout_constraintLeft_toRightOf="@+id/button10"

        app:layout_constraintRight_toLeftOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/button08" />

    <Button
        android:id="@+id/button11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:text="#"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button00"
        app:layout_constraintLeft_toRightOf="@+id/button00"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button00" />

    <Button
        android:id="@+id/buttonHangUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="HangUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonDial"
        app:layout_constraintTop_toBottomOf="@+id/button00"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonDial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="32dp"
        android:drawableStart="@android:drawable/stat_sys_phone_call"
        android:text="Dial"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHangUp"
        app:layout_constraintLeft_toRightOf="@+id/buttonHangUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonHangUp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>


